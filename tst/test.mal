fn start()
{
    clear()
    cursoff(true)
    var hits = 0
    var key = 0
    var i = 0
    while key != 27 do
    {
         hits = kbhit() 
         
         if hits > 0 then 
         {
            key = getch()
            locate(1,1)
            write("Key Pressed %{key}.  Hits %{hits}")
         }
         locate(10,10)
         write("Counter: %{i++}")
    }
}
start()
